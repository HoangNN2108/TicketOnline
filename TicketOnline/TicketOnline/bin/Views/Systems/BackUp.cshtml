
@{
    ViewBag.Title = "Sao lưu dữ liệu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<button class="btn btn-success" id="btnBackup" style="margin: 15px 15px 15px 15px"><i class="fa fa-building fa-fw"></i> Sao lưu</button>
<script>
    $('#btnBackup').click(function () {
        $.ajax({
            url: 'BackupDatabase',
            data: {},
            type: "post",
            dataType: 'json',
            success: function (data) {
                if (data.result == "success") {
                    alert("Sao lưu thành công");
                    window.location.href = data.url;
                }
                else {
                    alert('Sao lưu thất bại');
                }
            }
        });
    });
</script>
